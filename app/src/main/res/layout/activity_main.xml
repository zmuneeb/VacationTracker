<!-- activity_main.xml -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="50dp">

    <TextView
        android:id="@+id/greeting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Vacation Tracker!"
        android:textSize="45sp"
        android:textStyle="bold"
        android:gravity="center"
        android:layout_centerInParent="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="30dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/vacationListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Vacations"
            android:onClick="openVacationList"
            android:layout_marginRight="16dp"/>

        <Button
            android:id="@+id/excursionListButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="View Excursions"
            android:onClick="openExcursionList"/>
    </LinearLayout>
</RelativeLayout>